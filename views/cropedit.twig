{% extends './layout.twig' %}

{% set title = 'Article List' %}


{% block body %}
	<div class="row">
		<div class="col-md-12">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header">
					<h3 class="box-title">Crop Edit</h3>
				</div><!-- /.box-header -->
				<form method="post" id="edit" action="/cropedit/{{id}}">
					<div class="box-body">
						<div class="form-group">
							<label for="crops">Crop Name</label>
							<input required value="{{data.crops}}" minlength="3" maxlength="40" type="text" name="crops" class="form-control" placeholder="Crop Name"/>
						</div>
						<div class="form-group">
							<label for="zones">No of Zones</label>
							<input required value="{{data.zones}}" type="Number" name="zones" class="form-control" placeholder="No of Zones"/>
						</div>
					</div>
					<div class="box-footer">
						<button type="submit" class="btn btn-primary">Update</button>
						&nbsp;
						<a href="/cropdetails" class="btn btn-default">Cancel</a>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
{% block footerjs %}
{% endblock %}
