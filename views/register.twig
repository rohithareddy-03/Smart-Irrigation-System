{% extends 'layout.twig' %}

{% set title = 'Register' %}

{% block body %}
	<div class="row">
		<div class="col-md-12">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header">
					<h3 class="box-title">Register</h3>
				</div><!-- /.box-header -->
				<form method="post" id="edit" action="/register">
					<div class="box-body">
						<div class="form-group">
							<label for="username">User Name</label>
							<input required value="{{data.username}}" minlength="3" maxlength="40" type="text" name="username" class="form-control" placeholder="User Name"/>
						</div>
						<div class="form-group">
							<label for="email">Email</label>
							<input required value="{{data.email}}" minlength="3" maxlength="40" type="email" name="email" class="form-control" placeholder="Email"/>
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							<input required value="{{data.password}}" minlength="3" maxlength="25" type="password" name="password" class="form-control" placeholder="Password"/>
						</div>
						<div class="form-group">
							<label for="mobile">Mobile</label>
							<input value="{{data.mobile}}" type="tel" name="mobile" class="form-control" placeholder="Mobile"/>
						</div>
						<div class="form-group">
							<label for="location">Location</label>
							<input value="{{data.location}}" minlength="3" maxlength="25" type="text" name="location" class="form-control" placeholder="Location"/>
						</div>
					</div>
					<div class="box-footer">
						<button type="submit" class="btn btn-primary">Register</button>
						&nbsp;
						<a href="/" class="btn btn-default">Cancel</a>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
