{% set title = 'Articles' %}

{% block body %}
	<div class="row">
		<div class="col-md-12">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header">
					<h3 class="box-title">Edit Article</h3>
				</div><!-- /.box-header -->
				<form method="post" id="edit" action="/update/{{article._id}}">
					<input value="{{article._id}}" type="hidden" name="_id"/>
					<div class="box-body">
						<div class="form-group">
							<label for="description">Description</label>
							<textarea style="resize: none;" required value="{{article.description}}" name="description" id="description" rows="5" class="form-control" placeholder="Description">{{article.description}}</textarea>
						</div>
					</div>
					<div class="box-footer">
						<button type="submit" class="btn btn-primary">Update</button>
						&nbsp;
						<a href="/" class="btn btn-default">Cancel</a>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}